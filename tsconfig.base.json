{
  "compilerOptions": {
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@comms/*": [
        "packages/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  }
}
